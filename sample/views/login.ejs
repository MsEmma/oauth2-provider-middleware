<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
  </head>
  <body>
    <header>
      <h1>Login</h1>
    </header>
    <section>
      <% if (message) { %><p><%= message %></p><% } %>
      <form method="POST">
        <input
          type="text"
          name="username"
          placeholder="Username or email or ..."
          autocomplete="username"
        />
        <input
          type="password"
          name="password"
          placeholder="Password"
          autocomplete="current-password"
        />
        <button type="submit">Login</button>
      </form>
    </section>
  </body>
</html>
